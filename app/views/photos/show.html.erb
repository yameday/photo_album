<!-- Page Content -->
<div class="container">


	<div class="col-md-offset-3 col-md-6">
		<div class="thumbnail">			
			<%= image_tag @photo.file_location.url, size: "320x150", class: "img-thumbnail" %>
			<div class="caption">			

				<h4><%= @photo.title  %></h4>
				<p><%= simple_format(@photo.description) %></p>

			</div>
			<div class="ratings">
				<p><%= @photo.date %></p>

			</div>
		</div>
	</div>	


</div>	

<p class="text-center">

	<%= link_to photos_path, :class => 'button white' do %>	
	<button type="button" class="btn btn-default btn-lg" aria-label="Center Align">						
		<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
	</button>	
	<% end %>
	
</p>




