<!-- Page Content -->
<div class="container">

	<div class="col-md-9">

		<div class="row">

			<% @photos.each do |photo| %>
			<div class="col-sm-4 col-lg-4 col-md-4">
				<div class="thumbnail">			
									
					<%= link_to image_tag( photo.file_location.url, width: 300, class: "img-thumbnail"), photo_path(photo) %>
					
					<div class="caption">			

						<h4><%= link_to photo.title, photo_path(photo) %></h4>
						<p><%= simple_format(photo.description) %></p>

					</div>
					<div class="ratings">
						<p class="pull-right"><%= photo.date %></p>
						<p>

							<%= link_to edit_photo_path(photo), :class => 'button white' do %>	
							<button type="button" class="btn btn-default" aria-label="Left Align">						
								<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							</button>	
							<% end %>


							<%= link_to photo_path(photo), :class => 'button white', method: :delete, data:{ confirm: "Are you sure?" }  do %>		
							<button type="button" class="btn btn-default" aria-label="Left Align">						
								<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
							</button>	
							<% end %>

						</p>
					</div>
				</div>
			</div>	
			<% end %>

		</div>

	</div>	

</div>	